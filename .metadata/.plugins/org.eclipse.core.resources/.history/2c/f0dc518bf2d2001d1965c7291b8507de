package ì˜ˆì œ5;

import java.util.Scanner;

public class PostivieNum {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num, result;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("");
		num = sc.nextInt();
		
		result = zero(num);
		
		System.out.println("");
	}
	public static int zero(int num) {
		if (10 > num) {
			return 0;
		}
		else {
			if (num % 10 == 0) {
				num = num / 10;
				return zero(num) + 1;
			}
			else {
				num = num / 10;
				return zero(num);
			}
		}
	}
}
